{
  "name": "comicvm",
  "version": "1.0.0",
  "description": "A virtual machine to render comics",
  "repository": "https://github.com/retojs/comicvm.git",
  "main": "index.ts",
  "scripts": {
    "build": "webpack",
    "start": "concurrently --kill-others \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "webpack-dev-server --history-api-fallback --inline --progress --open",
    "start:backend": "node ./backend/server.js",
    "test:karma": "karma start",
    "test:karma:debug": "karma start --auto-watch --no-single-run",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:jest:debug": "node --inspect-brk node_modules/jest/bin/jest.js --runInBand"
  },
  "test": "jest",
  "author": "Reto J.S.",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/lodash": "^4.14.118",
    "@types/node": "^10.12.18",
    "@types/yaml": "^1.0.1",
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "cors": "^2.8.5",
    "css-loader": "^1.0.1",
    "express": "^4.16.4",
    "html-webpack-plugin": "^3.2.0",
    "jasmine-core": "^3.3.0",
    "jest": "^23.6.0",
    "jest-canvas-mock": "^1.1.0",
    "karma": "^3.1.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^2.0.0",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.5",
    "lodash": "^4.17.11",
    "mini-css-extract-plugin": "^0.4.5",
    "multer": "^1.4.1",
    "node-sass": "^4.10.0",
    "raw-loader": "^0.5.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.0",
    "typescript": "^3.1.6",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "dependencies": {
    "yaml": "^1.1.0"
  }
}
